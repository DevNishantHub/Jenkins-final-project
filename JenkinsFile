pipeline {
    agent { label 'master' }
    parameters{
        choice(name:"ENV",choices:["dev","test","prod"],description:"Select the environment")
    }
    stages{
        stage('checkout'){
            agent {label 'master'}
            steps{
                git url : 'https://github.com/DevNishantHub/Jenkins-final-project.git'
            }
        }
        stage('build'){
            agent {label 'Maven_slave'}
            steps{
                sh 'mvn clean install'
            }
        }
        stage('Test'){
            agent {label 'Maven_slave'}
            steps{
                sh "echo 'Running tests in ${params.ENV} environment'"
            }
        }
    }
    post {
    success {
        script {
            deploy adapters: [
                tomcat7(
                    credentialsId: 'af433960-b416-47c7-80e7-2ceda29a3ac8',
                    path: '',
                    url: 'http://52.188.184.142:8090/'
                )
            ],
            contextPath: null,
            war: 'target/com.jenkinsProject.war'
        }
        sh 'echo âœ… Deployment successful'
    }
}

}